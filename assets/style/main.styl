@import '_reset'
@import '_arcs'

.svg-container
  display: inline-block
  margin-bottom: 15px

  &:before
    content: 'svg container'
    display: block
    text-align: right
    font-size: 10px
    color: #ccc

  svg
    border: 1px dashed #ccc
    display: flex
    align-items: center


.example-case
	margin: 0
	padding: 20px 0
	border-bottom: 5px solid #ccc

.example-case img
  border: 1px solid #ccc
  margin: 20px 0 20px
  display: block

.paths-table
  tr td:first-child
    font-weight: bold
    font-size: 18px
    min-width: 230px

  .arguments
    display: block
    font-size: 14px
    font-weight: normal
    color: #666
